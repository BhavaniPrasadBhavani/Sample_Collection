generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Agent {
  id        String   @id @default(cuid())
  name      String
  phone     String   @unique
  password  String
  samples   Sample[]
}

model Sample {
  id             String       @id @default(cuid())
  patientName    String
  pickupAddress  String
  status         String       @default("SCHEDULED")  // SCHEDULED, COLLECTED, CANCELLED, DELAYED
  priority       String       @default("MEDIUM")     // HIGH, MEDIUM, LOW
  scheduledDate  DateTime
  notes          String?
  agentId        String
  agent          Agent        @relation(fields: [agentId], references: [id])
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}


